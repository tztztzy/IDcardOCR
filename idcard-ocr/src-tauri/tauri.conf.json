{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "证件工具箱 v0.0.2",
        "width": 1200,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.idcard-ocr.app",
      "publisher": "IDcardOCR",
      "copyright": "Copyright © 2024",
      "category": "Productivity",
      "shortDescription": "证件识别工具",
      "longDescription": "支持身份证矫正、OCR识别、批量处理、导出Excel和PDF等功能",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "tsp": false
      },
      "resources": [
        "card_correction.dll",
        "onnxruntime.dll",
        "opencv_world4110.dll",
        "models/*"
      ]
    }
  }
}
